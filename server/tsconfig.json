{
  "extends": "../tsconfig.json",
  "include": ["./**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist/server",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "rootDir": ".",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "*": ["../node_modules/*"]
    }
  }
} 